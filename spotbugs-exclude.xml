<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude SPRING_ENDPOINT detections - these are intentional Spring REST endpoints -->
    <Match>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>
    
    <!-- Exclude false positives for records and modern Java features -->
    <Match>
        <Class name="~.*\$\$Lambda.*"/>
    </Match>
    
    <!-- Suppress warnings about synthetic methods generated by Java compiler -->
    <Match>
        <Method name="~(toString|typeSwitch|apply|makeConcatWithConstants|accept|test|customize)"/>
    </Match>
    
    <!-- Exclude IMPROPER_UNICODE for LoadResourceProvider.formatLoadInfo - we use Locale.ROOT explicitly -->
    <Match>
        <Class name="ca.zhoozhoo.loaddev.mcp.provider.LoadResourceProvider"/>
        <Method name="formatLoadInfo"/>
        <Bug pattern="IMPROPER_UNICODE"/>
    </Match>
</FindBugsFilter>
