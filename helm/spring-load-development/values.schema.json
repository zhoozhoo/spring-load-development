{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spring Load Development Helm Chart Values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global settings shared across all subcharts",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "description": "Global Docker image registry"
        },
        "imageTag": {
          "type": "string",
          "description": "Global image tag for all microservices"
        },
        "imagePullSecrets": {
          "type": "array",
          "description": "Global Docker registry secret names as an array",
          "items": {
            "type": "string"
          }
        },
        "storageClass": {
          "type": "string",
          "description": "Global storage class for PersistentVolumeClaims"
        },
        "versions": {
          "type": "object",
          "description": "Single source of truth for all container versions",
          "properties": {
            "microservices": {
              "type": "string",
              "description": "Version for Spring Boot microservices"
            },
            "loki": {
              "type": "string",
              "description": "Loki version for log aggregation"
            },
            "tempo": {
              "type": "string",
              "description": "Tempo version for distributed tracing"
            },
            "prometheus": {
              "type": "string",
              "description": "Prometheus version for metrics collection"
            },
            "grafana": {
              "type": "string",
              "description": "Grafana version for observability dashboards"
            },
            "otelCollector": {
              "type": "string",
              "description": "OpenTelemetry Collector version"
            },
            "keycloak": {
              "type": "string",
              "description": "Keycloak version for authentication"
            },
            "postgresql": {
              "type": "string",
              "description": "PostgreSQL version for databases"
            }
          }
        }
      }
    },
    "observability": {
      "type": "object",
      "description": "Observability subchart (Grafana, Prometheus, Loki, Tempo, OTEL Collector)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable observability stack"
        },
        "namespace": {
          "type": "string",
          "description": "Namespace for observability components"
        }
      }
    },
    "keycloak": {
      "type": "object",
      "description": "Keycloak subchart (Authentication and Authorization)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Keycloak"
        },
        "namespace": {
          "type": "string",
          "description": "Namespace for Keycloak"
        }
      }
    },
    "postgresql": {
      "type": "object",
      "description": "PostgreSQL subchart (Databases for microservices and Keycloak)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable PostgreSQL databases"
        },
        "postgresql": {
          "type": "object",
          "properties": {
            "namespace": {
              "type": "string",
              "description": "Namespace for microservices PostgreSQL database"
            }
          }
        },
        "keycloakPostgresql": {
          "type": "object",
          "properties": {
            "namespace": {
              "type": "string",
              "description": "Namespace for Keycloak PostgreSQL database"
            }
          }
        }
      }
    },
    "reloading": {
      "type": "object",
      "description": "Reloading subchart (Spring Boot Microservices)",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Spring Boot microservices"
        },
        "namespace": {
          "type": "string",
          "description": "Namespace for Spring Boot microservices"
        }
      }
    }
  }
}
