{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spring Load Development Helm Chart Values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "description": "Global Docker image registry"
        },
        "imageTag": {
          "type": "string",
          "description": "Global image tag for all microservices"
        },
        "imagePullSecrets": {
          "type": "array",
          "description": "Global Docker registry secret names as an array"
        },
        "storageClass": {
          "type": "string",
          "description": "Global storage class for PersistentVolumeClaims"
        }
      }
    },
    "microservices": {
      "type": "object",
      "required": ["namespace"],
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Namespace for microservices"
        }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable PostgreSQL for microservices"
        },
        "namespace": {
          "type": "string"
        },
        "auth": {
          "type": "object",
          "required": ["database", "username", "password"],
          "properties": {
            "database": {
              "type": "string",
              "minLength": 1
            },
            "username": {
              "type": "string",
              "minLength": 1
            },
            "password": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "keycloak": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "auth": {
          "type": "object",
          "properties": {
            "adminUser": {
              "type": "string",
              "minLength": 1
            },
            "adminPassword": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "observability": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable observability stack (Loki, Tempo, Prometheus, Grafana)"
        }
      }
    },
    "apiGateway": {
      "$ref": "#/definitions/microservice"
    },
    "loadsService": {
      "$ref": "#/definitions/microservice"
    },
    "componentsService": {
      "$ref": "#/definitions/microservice"
    },
    "riflesService": {
      "$ref": "#/definitions/microservice"
    },
    "mcpServer": {
      "$ref": "#/definitions/microservice"
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "microservice": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable this microservice"
        },
        "replicas": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "image": {
          "type": "object",
          "required": ["repository"],
          "properties": {
            "repository": {
              "type": "string",
              "minLength": 1
            },
            "tag": {
              "type": "string"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "nodePort": {
              "type": "integer",
              "minimum": 30000,
              "maximum": 32767
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "limits": {
              "$ref": "#/definitions/resourceRequirements"
            },
            "requests": {
              "$ref": "#/definitions/resourceRequirements"
            }
          }
        },
        "env": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "resourceRequirements": {
      "type": "object",
      "properties": {
        "cpu": {
          "type": "string",
          "pattern": "^[0-9]+(m|[0-9]*\\.?[0-9]+)?$"
        },
        "memory": {
          "type": "string",
          "pattern": "^[0-9]+(Ei|Pi|Ti|Gi|Mi|Ki|E|P|T|G|M|K)?$"
        }
      }
    }
  }
}
